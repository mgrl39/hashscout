<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.mgrl39.hashscout.MainController"
            prefWidth="900"
            prefHeight="700"
            styleClass="border-pane">

    <!-- Menú Superior -->
    <top>
        <MenuBar styleClass="menu-bar">
            <Menu text="Archivo" styleClass="menu">
                <MenuItem text="Salir" onAction="#handleExit" styleClass="menu-item"/>
            </Menu>
            <Menu text="Ayuda" styleClass="menu">
                <MenuItem text="Acerca de" onAction="#handleAbout" styleClass="menu-item"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Contenido Principal -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" styleClass="tab-pane" VBox.vgrow="ALWAYS">
            <Tab text="Hash Generator">
                <VBox spacing="15" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <ComboBox fx:id="hashTypeComboBox" 
                                promptText="Select Hash Type"
                                styleClass="combo-box"/>
                        <Button text="Select File" 
                                onAction="#onSelectFile"
                                styleClass="btn btn-info"/>
                        <Button text="Generate Hash" 
                                onAction="#onGenerateHash"
                                styleClass="btn btn-primary"/>
                    </HBox>
                    <!-- Indicador de archivo seleccionado -->
                    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="selection-indicator">
                        <Label text="Arxiu seleccionat:" styleClass="label-header"/>
                        <Label fx:id="selectedFileLabel" text="Cap fitxer seleccionat" styleClass="label-value"/>
                    </HBox>
                    <TitledPane text="Hash Result" expanded="true" styleClass="titled-pane" VBox.vgrow="ALWAYS">
                        <TextArea fx:id="hashResultArea"
                                 editable="false"
                                 wrapText="true"
                                 prefRowCount="5"
                                 styleClass="text-area"/>
                    </TitledPane>
                    <!-- Barra de progreso para Hash Generator -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Progrés:" styleClass="label"/>
                        <ProgressBar fx:id="hashProgressBar" progress="0.0" prefWidth="400" styleClass="progress-bar"/>
                    </HBox>
                </VBox>
            </Tab>

            <Tab text="File Search">
                <VBox spacing="15" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                    <HBox spacing="10" alignment="CENTER">
                        <TextField fx:id="searchTextField"
                                 promptText="Enter search term..."
                                 HBox.hgrow="ALWAYS"
                                 styleClass="form-control"/>
                        <Button text="Select Folder" 
                                onAction="#onSelectFolderForSearch"
                                styleClass="btn btn-info"/>
                        <Button text="Search" 
                                onAction="#onSearchText"
                                styleClass="btn btn-success"/>
                    </HBox>
                    <!-- Indicador de carpeta seleccionada -->
                    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="selection-indicator">
                        <Label text="Carpeta seleccionada:" styleClass="label-header"/>
                        <Label fx:id="selectedSearchFolderLabel" text="Cap carpeta seleccionada" styleClass="label-value"/>
                    </HBox>
                    <TitledPane text="Search Results" expanded="true" styleClass="titled-pane" VBox.vgrow="ALWAYS">
                        <TextArea fx:id="searchResultArea"
                                 editable="false"
                                 wrapText="true"
                                 prefRowCount="15"
                                 styleClass="text-area"/>
                    </TitledPane>
                    <!-- Barra de progreso para File Search -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Progrés:" styleClass="label"/>
                        <ProgressBar fx:id="searchProgressBar" progress="0.0" prefWidth="400" styleClass="progress-bar"/>
                    </HBox>
                </VBox>
            </Tab>

<Tab text="File Organizer">
    <VBox spacing="15" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
        <!-- Nueva fila con dos botones -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Select Folder" 
                    onAction="#onSelectFolderForOrganization"
                    styleClass="btn btn-info"/>
            <Button text="Organize Files" 
                    onAction="#onOrganizeFiles"
                    styleClass="btn btn-success"/>
        </HBox>
        <!-- Indicador de carpeta seleccionada -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="selection-indicator">
            <Label text="Carpeta seleccionada:" styleClass="label-header"/>
            <Label fx:id="selectedOrganizeFolderLabel" text="Cap carpeta seleccionada" styleClass="label-value"/>
        </HBox>
        <TitledPane text="General Log" expanded="true" styleClass="titled-pane" VBox.vgrow="ALWAYS">
            <TextArea fx:id="logTerminal"
                     editable="false"
                     wrapText="true"
                     prefRowCount="15"
                     styleClass="text-area"/>
        </TitledPane>
        <!-- Barra de progreso para File Organizer -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Progrés:" styleClass="label"/>
            <ProgressBar fx:id="organizeProgressBar" progress="0.0" prefWidth="400" styleClass="progress-bar"/>
        </HBox>
    </VBox>
</Tab>

        </TabPane>
    </center>

    <!-- Barra de Estado -->
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 5;">
            <Label fx:id="statusLabel" text="Ready" styleClass="label"/>
        </HBox>
    </bottom>

</BorderPane>
