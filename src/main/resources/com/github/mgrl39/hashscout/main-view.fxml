<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.mgrl39.hashscout.MainController"
            prefWidth="800"
            prefHeight="600"
            style="-fx-padding: 10;">

    <!-- MenÃº Superior -->
    <top>
        <MenuBar>
            <Menu text="Archivo">
                <MenuItem text="Salir" onAction="#handleExit"/>
            </Menu>
            <Menu text="Ayuda">
                <MenuItem text="Acerca de" onAction="#handleAbout"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Contenido Principal -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Hash Generator">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <ComboBox fx:id="hashTypeComboBox" 
                                promptText="Select Hash Type"
                                styleClass="combo-box"/>
                        <Button text="Generate Hash" 
                                onAction="#onGenerateHash"
                                styleClass="btn,btn-primary"/>
                    </HBox>
                    <TitledPane text="Hash Result" expanded="true">
                        <TextArea fx:id="hashResultArea"
                                 editable="false"
                                 wrapText="true"
                                 prefRowCount="3"/>
                    </TitledPane>
                </VBox>
            </Tab>

            <Tab text="File Search">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <HBox spacing="10" alignment="CENTER">
                        <TextField fx:id="searchTextField"
                                 promptText="Enter search term..."
                                 HBox.hgrow="ALWAYS"/>
                        <Button text="Search" 
                                onAction="#onSearchText"
                                styleClass="btn,btn-success"/>
                    </HBox>
                    <TitledPane text="Search Results" expanded="true">
                        <TextArea fx:id="searchResultArea"
                                 editable="false"
                                 wrapText="true"
                                 prefRowCount="10"/>
                    </TitledPane>
                </VBox>
            </Tab>

            <Tab text="File Organizer">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <Button text="Select Folder to Organize" 
                            onAction="#onOrganizeFiles"
                            styleClass="btn,btn-info"/>
                    <TitledPane text="Organization Log" expanded="true">
                        <TextArea fx:id="logTerminal"
                                 editable="false"
                                 wrapText="true"
                                 style="-fx-font-family: 'Consolas', 'Monaco', monospace;
                                        -fx-font-size: 12px;
                                        -fx-background-color: #2b2b2b;
                                        -fx-text-fill: #a9b7c6;"/>
                    </TitledPane>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <!-- Barra de Estado -->
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 5;">
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>

</BorderPane>
